SELECT SOHD,TRIGIA FROM HOADON
WHERE NGHD ='2007-01-01' AND NGHD ='2007-01-01';

--7
SELECT SOHD,TRIGIA FROM HOADON
WHERE NGHD >= '2007-01-01' AND NGHD <='2007-01-31'
ORDER BY TRIGIA DESC,NGHD ASC;
SELECT *FROM HOADON;
--8
SELECT KH.MAKH,KH.HOTEN FROM QuanLyBanHang AS KH,HOADON AS HD
WHERE HD.NGHD = '2007/01/01'AND  KH.MAKH=HD.MAKH;
--9
SELECT HD.SOHD, HD.TRIGIA
FROM HOADON as HD
JOIN NhanVien AS NV ON HD.MANV = NV.MANV
WHERE NV.HOTEN = N'Nguyen Van B' 
  AND HD.NGHD = '2006-10-28';
 SELECT CTHD.MASP,SP.TENSP
 FROM CTHD
 JOIN HOADON AS HD ON CTHD.SOHD=HD.SOHD
 JOIN QuanLyBanHang AS KH ON KH.MAKH=KH.MAKH
 JOIN SANPHAM AS SP ON SP.MASP=CTHD.MASP
 WHERE KH.HOTEN='Nguyen Van A'
 and HD.NGHD >='2006-10-01' 
 AND HD.NGHD < '2006-11-01';
 SELECT SOHD FROM CTHD
 WHERE MASP='BB01' OR MASP='BB02';
SELECT SOHD FROM CTHD 
 WHERE (MASP='BB01' OR MASP ='BB02') 
 AND ( SL >= 10 AND SL <=20);
 SELECT SOHD FROM CTHD
 WHERE MASP ='BB01'
   AND ( SL >= 10 AND SL <= 20 )
  INTERSECT
  (SELECT SOHD FROM CTHD
  WHERE MASP='BB02'
   AND ( SL >= 10 AND SL <= 20 ));
 SELECT *FROM CTHD;
 use BTVN2 
 SELECT SP.MASP,SP.TENSP FROM SANPHAM SP
 INNER JOIN  CTHD 
 ON CTHD.MASP=SP.MASP
 INNER JOIN HOADON HD
 ON HD.SOHD=CTHD.SOHD
 WHERE NUOCSX='Trung Quốc' or NGHD ='2007/01/01'

 select MASP, TENSP from sanpham 
 where MASP NOT IN ( select MASP FROM CTHD );

 select  SP.MASP,SP.TENSP FROM SANPHAM AS SP
  WHERE SP.MASP NOT IN ( SELECT MASP FROM CTHD
  INNER JOIN HOADON ON
  CTHD.SOHD = HOADON.SOHD
  WHERE YEAR(NGHD) = 2006 )
  ;
  SELECT SP.MASP,SP.TENSP FROM SANPHAM AS SP
  WHERE NUOCSX = 'Trung Quốc' AND SP.MASP NOT IN (
  SELECT CTHD.MASP FROM CTHD 
  INNER JOIN HOADON AS HD
  ON HD.SOHD=CTHD.SOHD
  WHERE YEAR(NGHD) = 2006);

  --19
  select count(SOHD) as soluongkhachhangkhdki FROM HOADON 
  where MAKH is null;
  --20
  select COUNT (MASP) AS TONGSANPHAMKHACNHAU FROM CTHD
 INNER JOIN HOADON on
 cthd.SOHD = HOADON.SOHD
 where YEAR(HOADON.NGHD) = 2006;
 --21
 SELECT MAX(TRIGIA) AS TRIGIALONNHAT ,MIN(TRIGIA) AS TRIGIANHONHAT FROM HOADON;
 --22
 select AVG(TRIGIA) AS TRUNGBINH FROM HOADON
 WHERE YEAR(NGHD) = 2006;
 --23
 select sum(TRIGIA) AS TONGDOANHTHU from HOADON AS HD
 where YEAR(HD.NGHD) = 2006;
 --24
 select  TOP 1 SOHD , TRIGIA  FROM HOADON
 WHERE YEAR(NGHD) = 2006
 ORDER BY TRIGIA DESC;
 --25
 SELECT TOP 1 HOTEN FROM QuanLyBanHang AS KH 
 INNER JOIN HOADON AS HD
 ON KH.MAKH = HD.MAKH
 WHERE YEAR(NGHD) = 2006
 ORDER BY TRIGIA DESC;
 --26
 SELECT TOP 3 HOTEN , MAKH FROM QuanLyBanHang AS KH
 ORDER BY DOANHSO DESC;
 --27
 SELECT MASP,TENSP FROM SANPHAM
 WHERE GIA IN ( SELECT TOP 3 GIA FROM SANPHAM
 ORDER BY GIA DESC );
 --28
 SELECT MASP,TENSP FROM SANPHAM
 WHERE NUOCSX ='Thái lan' and GIA in ( select top 3 gia from sanpham
 order by gia desc);
 --29
 SELECT MASP,TENSP FROM SANPHAM
 WHERE NUOCSX='Trung Quoc' AND GIA IN (
 SELECT TOP 3 GIA FROM SANPHAM
 WHERE NUOCSX='Trung Quoc'
 order by gia desc);
 --30
 select top 3 *from QuanLyBanHang
 order by DOANHSO DESC;
 --31
 select count(MASP) as tongsp FROM SANPHAM
 WHERE NUOCSX ='Trung Quoc';
 --32
 select NUOCSX ,count (MASP)as tongsp from sanpham
 group by NUOCSX;
 --33
 SELECT NUOCSX , MAX(GIA) AS GIACAONHAT , MIN(GIA) AS GIATHAPNHAT , AVG(GIA) AS GIATB FROM SANPHAM
 GROUP BY NUOCSX;
 --34
 select  NGHD , SUM(TRIGIA) as TONGDOANHTHU FROM HOADON
 GROUP BY NGHD
 ORDER BY NGHD;
 --35
 select TENSP, count(SP.MASP) FROM SANPHAM AS SP
 INNER JOIN CTHD 
 ON CTHD.MASP = SP.MASP
 INNER JOIN HOADON AS HD
 ON HD.SOHD = CTHD.SOHD
 WHERE HD.NGHD between '2006-10-01' and'2006-10-31'
 GROUP BY SP.MASP,TENSP;
 --36
 select sum(trigia) AS TONGDOANHTHU1THANG,month(nghd) as THANG from hoadon
 where year(nghd)=2006
 group by month(nghd);
 -- 37
 select SOHD , COUNT(DISTINCT MASP) AS SOSPDAMUA  FROM CTHD
 GROUP BY SOHD
 HAVING COUNT(DISTINCT MASP) >= 4;
 SELECT SOHD, COUNT(DISTINCT CTHD.MASP) AS SOSPDAMUA FROM CTHD
 INNER JOIN SANPHAM AS SP
 ON SP.MASP = CTHD.MASP
 WHERE NUOCSX ='Viet Nam'
 GROUP BY SOHD
 HAVING COUNT (DISTINCT CTHD.MASP) = 3;
 --39
 SELECT TOP 1 KH.MAKH,HOTEN , COUNT (HD.SOHD) AS SOHDDAMUA FROM QuanLyBanHang AS KH
 INNER JOIN HOADON AS HD
 ON HD.MAKH = KH.MAKH
 GROUP BY KH.MAKH ,HOTEN
 ORDER BY COUNT(HD.SOHD) DESC;
 --40
 select TOP 1 month(nghd) as THANG ,SUM(TRIGIA) AS TONGDOANHTHUTHANG from HOADON
 where year(nghd)=2006
 group by month(nghd)
 ORDER BY SUM(TRIGIA) DESC;
 --41
 select TOP 1 SP.MASP,TENSP ,SUM(SL) AS TONGSOLUONG FROM SANPHAM AS SP
 INNER JOIN CTHD 
 ON CTHD.MASP = SP.MASP
 inner join HOADON as HD
 ON HD.SOHD = CTHD.SOHD
 WHERE YEAR(HD.NGHD) = 2006
 GROUP BY SP.MASP , TENSP
 ORDER BY SUM(SL) ASC;
 --42
 SELECT TOP 1  MASP,TENSP,NUOCSX, MAX(GIA) FROM SANPHAM
GROUP BY MASP, TENSP,NUOCSX
ORDER BY MAX(GIA) DESC;
--43
SELECT NUOCSX  FROM SANPHAM
GROUP BY NUOCSX
HAVING COUNT(MASP) >=3 ;
--44
WITH DoanhSoCaoNhat AS (
    SELECT MAKH, SUM(TRIGIA) AS TONGTRIGIA
    FROM dbo.HOADON
    GROUP BY MAKH
    ORDER BY TONGTRIGIA DESC
    LIMIT 10
),
MuaHangNhieuNhat AS (
    SELECT MAKH, COUNT(MAKH) AS SOLANMUA
    FROM dbo.HOADON
    WHERE MAKH IN (SELECT MAKH FROM DoanhSoCaoNhat)
    GROUP BY MAKH
    ORDER BY SOLANMUA DESC
    LIMIT 1
)
SELECT KH.MAKH, KH.HOTEN, MH.SOLANMUA
FROM KHACHHANG KH
INNER JOIN MuaHangNhieuNhat MH ON KH.MAKH = MH.MAKH;
