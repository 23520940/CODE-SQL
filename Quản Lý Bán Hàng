--TAO QUAN HE SANPHAM1 CHUA TOAN BO SANPHAM
SELECT*INTO SANPHAM1 FROM SANPHAM;
--TAO QUAN HE KHACHHANG1 CHUA TOANBO KHACHHANG
SELECT *INTO KHACHHANG1 FROM QuanLyBanHang;
UPDATE SANPHAM1
SET GIA=GIA*1.05
WHERE NUOCSX='Thai Lan';
UPDATE SANPHAM1
SET GIA=GIA*0.95
WHERE NUOCSX='Trung Quoc' and GIA < 10000;
UPDATE KHACHHANG1
SET LOAIKH ='VIP'
WHERE  ( NGDK < '2007-01-01' AND DOANHSO > 10000000 ) OR (NGDK >' 2007-01-01 ' AND DOANHSO > 2000000);
--1
select MASP,TENSP FROM SANPHAM
WHERE NUOCSX='Trung Quoc';
--2
select MASP,TENSP FROM SANPHAM
WHERE DVT='cay'or DVT='quyen';
--3
select MASP,TENSP FROM SANPHAM
WHERE MASP LIKE'B%01';
--4
SELECT MASP,TENSP FROM SANPHAM
WHERE NUOCSX='Trung Quoc' and (GIA >= 30000 AND GIA <= 40000)
--5
SELECT MASP,TENSP FROM SANPHAM
WHERE (NUOCSX='Trung Quoc' or NUOCSX='Thai Lan')
and (GIA >= 30000 AND GIA <=40000);
--6
update HOADON
SET NGHD='2007-01-01'
WHERE NGHD='2007-01-20';
UPDATE HOADON
SET NGHD='2007-01-01'
WHERE NGHD='2007-01-25';
